# Use Win key as the modifier (but I usually swap Alt and Win via setxkbmap)
set $mod Mod4

# Names for workspaces
set $ws1    "1"
set $ws2    "2"
set $ws3    "3"
set $ws4    "4"
set $ws5    "5"
set $ws6    "6"
set $ws7    "7"
set $ws8    "8"
set $ws9    "9"
set $ws10   "10"

# Use system monospace font
font pango:monospace 11

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym XF86Tools exec i3lock -fo

# start a terminal
bindsym $mod+Return exec alacritty --working-directory="`xcwd`"

# kill focused window
bindsym $mod+d kill

# kill all windows
bindsym $mod+z [class=".*"] kill

# start dmenu
bindsym $mod+p exec --no-startup-id dmenu_run -b -h 42 -fn "monospace-12" -nb "#000000" -sf "#ffffff" -sb "#000000" -nf "#555555"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+Shift+v split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exit

# resize the currently focused window
bindsym $mod+Control+h resize shrink width 10 px or 10 ppt
bindsym $mod+Control+j resize grow height 10 px or 10 ppt
bindsym $mod+Control+k resize shrink height 10 px or 10 ppt
bindsym $mod+Control+l resize grow width 10 px or 10 ppt

# Make the currently focused window a scratchpad
bindsym $mod+Shift+semicolon move scratchpad

# Show the first scratchpad window
bindsym $mod+semicolon scratchpad show

# Hide bar.
bindsym $mod+b bar mode invisible
bindsym $mod+Shift+b bar mode dock

# Colors
set $bg #000000cc
set $tx #ffffff
set $ac #005500
set $gr #555555
set $rd #aa0000

# Window appearance
# gaps inner 10
# gaps outer 0
# border_radius 8

new_window pixel 0
new_float pixel 0

# Enable popup during fullscreen
popup_during_fullscreen smart

# i3bar configuration
bar {
    i3bar_command i3bar --transparency
    status_command SCRIPT_DIR=/usr/lib/i3blocks/ i3blocks
    separator_symbol "|"
    strip_workspace_numbers yes

    position bottom

    colors {
        background $bg
        statusline $tx
        focused_workspace $bg $bg $tx
        active_workspace $bg $bg $tx
        inactive_workspace $bg $bg $gr
        urgent_workspace $rd $rd $tx
        separator $gr
    }
}

# Assign workspaces to outputs
workspace 1 output eDP1
workspace 2 output DP1-1-5 eDP1
workspace 3 output DP1-1-5 eDP1
workspace 4 output DP1-1-5 eDP1
workspace 5 output DP1-1-5 eDP1

# Assign programs to workspaces
assign [class="Signal"] workspace 5

# Various hotkeys
bindsym $mod+F1 exec chromium
bindsym $mod+F2 exec alacritty --working-directory=$HOME/tmp -e mutt
bindsym $mod+F3 exec alacritty -e nvim -S ~/.local/share/nvim/sessions/plans.vim
bindsym $mod+F4 exec alacritty -e ncmpcpp
bindsym $mod+F5 exec signal-desktop
bindsym $mod+F6 exec pavucontrol
bindsym XF86AudioRaiseVolume exec pamixer --allow-boost -i 5 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec pamixer --allow-boost -d 5 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec pamixer -t && pkill -RTMIN+1 i3blocks
bindsym XF86MonBrightnessUp exec sudo xbacklight -inc 19
bindsym XF86MonBrightnessDown exec sudo xbacklight -dec 19
bindsym Print exec screenshot
bindsym Control+Print exec screencast
bindsym $mod+Down exec mpc toggle && pkill -RTMIN+2 i3blocks
bindsym $mod+Right exec mpc next && pkill -RTMIN+2 i3blocks
bindsym $mod+Left exec mpc prev && pkill -RTMIN+2 i3blocks
bindsym $mod+Next exec mpc seek +30 && pkill -RTMIN+2 i3blocks
bindsym $mod+Prior exec mpc seek -30 && pkill -RTMIN+2 i3blocks
bindsym $mod+c exec middlec

exec --no-startup-id alacritty
exec --no-startup-id dunst
exec --no-startup-id udiskie -nas
exec --no-startup-id redshift
exec --no-startup-id mpd
exec --no-startup-id unclutter --hide-on-touch
exec --no-startup-id init-mouse
