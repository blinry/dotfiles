[mpd]
command=mpc current
interval=10
signal=2

[volume]
command=$SCRIPT_DIR/volume-pulseaudio/volume-pulseaudio
LONG_FORMAT="${VOL}%"
SHORT_FORMAT="${VOL}%"
interval=once
signal=1

[mail]
command=echo $(mlist ~/permanent/mail/INBOX | wc -l) mails
interval=60

[battery]
command=battery-status
interval=60

[worldclock]
command=worldclock
interval=60

[time]
command=date +"%Y-%m-%d %H:%M "
interval=60
