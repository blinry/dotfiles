[mpd]
command=mpd-status
interval=1
signal=2

[todo]
command=todo-status
interval=60

[helferli]
command=helferli
interval=60
color=#2fa85a

[mail]
command=echo $(mlist ~/permanent/mail/INBOX | wc -l) mails
interval=60

[volume]
command=audio-status
interval=once
signal=1

[battery]
command=battery-status
interval=60

[worldclock]
command=worldclock
interval=1

[time]
command=date +"%Y-%m-%d %H:%M "
interval=1
